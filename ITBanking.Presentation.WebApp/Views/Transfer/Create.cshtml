@using ITBanking.Core.Application.ViewModels.SaveVm
@model TransferSaveVm
<div class="row">
  <div class="col-12">
    @if (Model.HasError){
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <p>@Model.Error</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    }
    <div class="d-flex justify-content-around align-items-center">
      <div class="col-3">
        <input type="text" class="form-control bg-secondary text-muted" readonly value="El Pepe" />
      </div>
      <div class="col-3">
        <input type="text" class="form-control text-muted" readonly asp-for="ReceptorModel.AccountNumber" />
      </div>
    </div>
    <div class="row">
      <div class="col-6 offset-3 mt-4">
        <div class="card">
          <div class="card-header">
            <h4>Account</h4>
          </div>
          <div class="card-body">
            <form method="post" asp-controller="Transfer" asp-action="Create">
              <div class="mb-3">
                <select class="form-select" asp-for="SProductId">
                  <option selected>Select your product...</option>
                  @foreach (var item in Model.Products)
                  {
                    <option value="@item.Id">@item.AccountNumber</option>
                  }
                </select>
              </div>
              <input type="hidden" asp-for="Receptor" value="@Model.ReceptorModel.AccountNumber" />
              <input type="hidden" asp-for="RProductId" value="@Model.ReceptorModel.Id" />

              <div class="mb-3">
                <input class="form-control" placeholder="Amount" asp-for="Amount" type="number" />
              </div>

              <button type="submit" class="btn btn-outline-primary float-end">Confirm transfer</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
