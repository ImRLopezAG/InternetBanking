@using ITBanking.Core.Application.ViewModels

@model ProductVm
@*@{
    List<AccountDto> ProductList = ViewBag.ProducUsers;
}
*@
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-around align-items-center">
                <div class="col-3">
                    <input type="text" class="form-control bg-secondary text-muted" readonly value="El Pepe" />
                </div>
                <div class="col-3">
                    <input type="text" class="form-control text-muted" readonly asp-for="AccountNumber" />
                </div>
            </div>
            <div class="row">
                <div class="col-6 offset-3 mt-4">
                    <div class="card">
                        <div class="card-header">
                            <h4>Account</h4>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-controller="Transfer" asp-action="Transfer">
                                <div class="mb-3">
                                    <select class="form-select" @*asp-items="@(new SelectList(ViewBag.SaveAccounts, "Id", "AccountNumber"))"*@>
                                        <option selected>Choose...</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <input class="form-control" placeholder="Amount" asp-for="Amount" type="number" />
                                </div>

                                <button type="submit" class="btn btn-outline-primary float-end">Confirm transfer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>