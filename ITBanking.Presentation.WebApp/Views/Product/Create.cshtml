@using ITBanking.Core.Application.ViewModels.SaveVm
@model ProductSaveVm

@{
    ViewData["Title"] = "Create Products";
}

<h2>Create</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        @if (Model.HasError) {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <p>@Model.Error</p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="UserId" class="form-label">User</label>
                <select asp-for="UserId" class="form-select">
                    <option selected>Select User</option>
                    @foreach (var item in Model.Users) {
                        <option value="@item.Id">@item.FullName</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="TyAccountId" class="form-label">Product Type</label>
                <select asp-for="TyAccountId" class="form-select">
                    <option selected>Select Product Type</option>
                    <option value="1">Saving</option>
                    <option value="2">Credict</option>
                    <option value="3">Loans</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Amount" class="form-label">Amount</label>
                <input type="number" asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div id="MainLimit">
            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        const tyAccountId = document.getElementById('TyAccountId');
        const mainLimit = document.getElementById('MainLimit');
        const limit = document.CreateElement('div');
        tyAccountId.addEventListener('change', (e) => {
            if (e.target.value == 2 || e.target.value == 3) {
                limit.innerHTML = `<div class="mb-3">
                                                                                                                                                                                                                                                                                                  <label name="Limit" class="form-label">Limit</label>
                                                                                                                                                                                                                                                                                                  <input name="Limit" class="form-control" />
                                                                                                                                                                                                                                                                                                  <span asp-validation-for="Limit" class="text-danger"></span>
                                                                                                                                                                                                                                                                                                </div>`;
                mainLimit.appendChild(limit);
            } else {
                mainLimit.removeChild(limit);
            }
        });
    </script>
}