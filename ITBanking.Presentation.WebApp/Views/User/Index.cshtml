@model ITBanking.Core.Application.ViewModels.User.LoginVm;
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-4 mx-auto">
        <h2 class="text-center font-monospace">Login</h2>
        <hr />
        @if (Model.HasError) {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <p>@Model.Error</p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form asp-controller="User" asp-action="Index">
            <div class="form-group">
                <input asp-for="Email" placeholder="Email" class="form-control" />
            </div>
            <div class="form-group mb-3 mt-3">
                <input asp-for="Password" placeholder="Password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-outline-primary w-100">Login</button>
            @*            <div class="form-group">
            <input type="submit" value="Login" class="btn btn-outline-success float-end" />
            <a asp-controller="User" asp-action="Create" class="btn btn-primary float-start">Register as a new user</a>
            </div>*@
            <div class="form-group text-center">
                <a asp-controller="User" asp-action="ForgotPassword" class="btn btn-link mx-auto">Forgot password?</a>
            </div>
        </form>
    </div>
</div>
